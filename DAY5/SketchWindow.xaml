<Window x:Class="SKETCH.SketchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SKETCH"
        mc:Ignorable="d"
        Title="SketchWindow" Height="450" Width="800">
        
    <DockPanel>
        <Label DockPanel.Dock="Top" Content="서명해주세요" FontSize="20"/>

        
        <Canvas DockPanel.Dock="Bottom"   Name="canvas" Background="Yellow" 
                MouseLeftButtonDown="canvas_MouseLeftButtonDown"
                MouseMove="canvas_MouseMove"
                MouseRightButtonDown="canvas_MouseRightButtonDown">
            
        </Canvas>
        
    </DockPanel>
    
    
    
</Window>
